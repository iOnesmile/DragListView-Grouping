<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_tipbar"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_lamp_state"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:src="@drawable/lamplist_ic_lamp_active" />

        <TextView
            android:id="@+id/tv_wifiname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/iv_wifi"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@+id/iv_lamp_state"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="彩灯_编号"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_lamp_opt"
            android:src="@drawable/login_wifi_04" />

        <ImageView
            android:id="@+id/iv_lamp_opt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:paddingRight="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/lamplist_ic_info_nor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@id/iv_lamp_state"
            android:layout_alignLeft="@+id/tv_wifiname"
            android:background="#DDDDDD" />
    </RelativeLayout>

</RelativeLayout>